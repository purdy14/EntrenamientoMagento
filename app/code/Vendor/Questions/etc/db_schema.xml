<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="vendor_questions" resource="default" engine="innodb" comment="Questions Table">
        <column xsi:type="int" name="question_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Question ID"/>
        <column xsi:type="text" name="question" nullable="false" comment="Question Text"/>
        <column xsi:type="text" name="answer" nullable="true" comment="Answer Text"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Creation Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="question_id"/>
        </constraint>
    </table>
    <table name="custom_order_data" resource="sales">
        <column xsi:type="varchar" name="custom_field" nullable="true" length="255" comment="Custom Field"/>
    </table>
   <table name="custom_order_data" resource="default" engine="innodb" comment="Custom Order Data Table">
        <column name="entity_id" xsi:type="int" unsigned="true" nullable="false" identity="true">
            <settings>
                <auto_increment>true</auto_increment>
                <primary>true</primary>
            </settings>
        </column>
        <column name="sku" xsi:type="varchar" length="255" nullable="false"/>
        <column name="increment_id" xsi:type="varchar" length="50" nullable="false"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
